SELECT product.id, product.name, type.name as type, size.name as size, product.price, product.coffee, product.milk, product.creammilk, product.chocolate_topping, product.syrup, product.chocolate, product.cocoa, product.icecream, product.tea, product.cup_espresso, product.cup_small, product.cup_middle, product.cup_big FROM product 
INNER JOIN type ON product.type = type.id
INNER JOIN size ON product.size = size.id
