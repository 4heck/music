DROP TABLE product;

CREATE TABLE public.product (
    id integer PRIMARY KEY,
    name character varying(100),
    type integer DEFAULT 0,
    size integer DEFAULT 0,
    price integer DEFAULT 0,
    coffee integer DEFAULT 0,
    milk integer DEFAULT 0,
    creammilk integer DEFAULT 0,
    chocolate_topping integer DEFAULT 0,
    syrup integer DEFAULT 0,
    chocolate integer DEFAULT 0, 
    cocoa integer DEFAULT 0,
    icecream integer DEFAULT 0,
    tea integer DEFAULT 0,
    cup_espresso integer DEFAULT 0,
    cup_small integer DEFAULT 0,
    cup_middle integer DEFAULT 0,
    cup_big integer DEFAULT 0
);

drop table stock;
CREATE TABLE public.stock (
    id serial PRIMARY KEY,
    coffee integer DEFAULT 0,
    milk integer DEFAULT 0,
    creammilk integer DEFAULT 0,
    chocolate_topping integer DEFAULT 0,
    syrup integer DEFAULT 0,
    chocolate integer DEFAULT 0, 
    cocoa integer DEFAULT 0,
    icecream integer DEFAULT 0,
    tea integer DEFAULT 0,
    cup_espresso integer DEFAULT 0,
    cup_small integer DEFAULT 0,
    cup_middle integer DEFAULT 0,
    cup_big integer DEFAULT 0,
	thermoglass1 integer DEFAULT 0,
	wooden_icon1 integer DEFAULT 0,
	wooden_icon2 integer DEFAULT 0,
	cup_1 integer DEFAULT 0,
	cup_2 integer DEFAULT 0,
	cup_3 integer DEFAULT 0,
	coffee_250gr integer DEFAULT 0,
	postcard integer DEFAULT 0,
	chips_with_basil integer DEFAULT 0,
	chips_with_banana integer DEFAULT 0,
	chips_with_orange integer DEFAULT 0,
	chips_with_fruit_mix integer DEFAULT 0,
	chips_with_pinapple integer DEFAULT 0,
	chips_with_watermelon integer DEFAULT 0,
	chips_with_mango integer DEFAULT 0,
	chips_with_pear integer DEFAULT 0,
	chips_with_cocos integer DEFAULT 0,
	chips_with_melon integer DEFAULT 0,
	sandwich_with_chicken integer DEFAULT 0,
	protein_snack integer DEFAULT 0,
	muffin integer DEFAULT 0,
	donut integer DEFAULT 0,
	cookie integer DEFAULT 0,
	fruit_snack integer DEFAULT 0,
	macarons integer DEFAULT 0,
	Wagon_Wheels integer DEFAULT 0,
	Nutella integer DEFAULT 0,
	Mini_Ritter_Sport integer DEFAULT 0
);

CREATE SEQUENCE public.product_id_seq
    AS integer
    START WITH 1
    INCREMENT BY 1
    NO MINVALUE
    NO MAXVALUE
    CACHE 1;

ALTER TABLE public.product_id_seq OWNER TO postgres;

ALTER SEQUENCE public.product_id_seq OWNED BY public.product.id;

ALTER TABLE ONLY public.product ALTER COLUMN id SET DEFAULT nextval('public.product_id_seq'::regclass);

